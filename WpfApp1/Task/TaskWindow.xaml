<Window x:Class="PL.Task.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Task"
        mc:Ignorable="d"
        Title="TaskWindow" Height="450" Width="800"
    DataContext="{Binding CurrentTask, RelativeSource={RelativeSource Self}, Mode=TwoWay}">
    <Grid>
        <Label Content="תיאור המשימה" HorizontalAlignment="Left" Margin="537,154,0,0" VerticalAlignment="Top" Height="30" Width="149"/>
        <Label Content="ת.ז" HorizontalAlignment="Left" Margin="537,43,0,0" VerticalAlignment="Top" Height="30" Width="149"/>
        <Label Content=" ת.ז מהנדס" HorizontalAlignment="Left" Margin="537,247,0,0" VerticalAlignment="Top" Height="30" Width="149"/>
        <Label Content="הערות" HorizontalAlignment="Left" Margin="537,98,0,0" VerticalAlignment="Top" Height="30" Width="149"/>
        <Label Content="אבן  דרך" HorizontalAlignment="Left" Margin="537,293,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.417,-0.292" Width="71" Height="30"/>
        <Label Content="מוצר " HorizontalAlignment="Left" Margin="537,0,0,0" VerticalAlignment="Center" Height="30" Width="149"/>
        <Label Content="כינוי משימה" HorizontalAlignment="Left" Margin="520,342,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.417,-0.292" Width="104" Height="31"/>
        <Label Content="סטטוס" HorizontalAlignment="Left" Margin="537,128,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.417,-0.292" Width="104" Height="31"/>
        <Label Content="הזמן שנדרש למשימה" HorizontalAlignment="Left" Margin="520,73,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.417,-0.292" Width="134" Height="31"/>
        <Label Content="דרגת קושי המשימה" HorizontalAlignment="Left" Margin="520,386,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.417,-0.292" Width="121" Height="31"/>
        <Label Content="תאריך תחילת העבודה על המשימה" HorizontalAlignment="Left" Margin="123,0,0,0" VerticalAlignment="Center" RenderTransformOrigin="-2.417,-0.292" Width="192" Height="31"/>
        <Label Content="תאריך סיום אחרון אפשרי" HorizontalAlignment="Left" Margin="157,329,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.417,-0.292" Width="104" Height="31"/>
        <Label Content="תאריך סיום בפועל" HorizontalAlignment="Left" Margin="171,262,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.417,-0.292" Width="104" Height="31"/>
        <Label Content="תאריך מתוכנן לתחילת העבודה" HorizontalAlignment="Left" Margin="125,141,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.417,-0.292" Width="168" Height="31"/>
        <Label Content="תאריך יצירת הפרוייקט" HorizontalAlignment="Left" Margin="171,89,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.417,-0.292" Width="134" Height="31"/>

        <!-- TextBox for taskDescription -->
        <TextBox HorizontalAlignment="Left" Margin="320,154,0,0" TextWrapping="Wrap" 
         Text="{Binding description, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Top" Width="120"/>

        <!-- TextBox for ת.ז -->
        <TextBox HorizontalAlignment="Left" Margin="320,43,0,0" TextWrapping="Wrap" 
         Text="{Binding taskId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Top" Width="120"/>

        <!-- TextBox for ת.ז מהנדס -->
        <TextBox HorizontalAlignment="Left" Margin="320,247,0,0" TextWrapping="Wrap" 
         Text="{Binding engineer, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Top" Width="120"/>

        <!-- TextBox for remarks -->
        <TextBox HorizontalAlignment="Left" Margin="320,98,0,0" TextWrapping="Wrap" 
         Text="{Binding remarks, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Top" Width="120"/>

        <!-- TextBox for אבן דרך -->
        <TextBox HorizontalAlignment="Left" Margin="320,293,0,0" TextWrapping="Wrap" 
         Text="{Binding milestone, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Top" Width="120"/>

        <!-- TextBox for מוצר -->
        <TextBox IsEnabled="False" HorizontalAlignment="Left" Margin="320,0,0,0" TextWrapping="Wrap" 
         Text="{Binding product, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Center" Width="120"/>

        <!-- TextBox for כינוי משימה -->
        <TextBox HorizontalAlignment="Left" Margin="320,344,0,0" TextWrapping="Wrap" 
         Text="{Binding alias, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Top" Width="120"/>

        <!-- CheckBox for פעיל -->
        <CheckBox HorizontalAlignment="Left" Margin="320,128,0,0" VerticalAlignment="Top"
          IsChecked="{Binding status, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Content=""/>

        <!-- TextBox for הזמן שנדרש למשימה -->
        <TextBox HorizontalAlignment="Left" Margin="320,73,0,0" TextWrapping="Wrap" 
         Text="{Binding RequiredTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Top" Width="120"/>
        <!-- TextBox for דרגת קושי המשימה -->
        
        <!--<ComboBox HorizontalAlignment="Left" Height="NaN" Margin="320,386,0,0" ItemsSource="{Binding Source={StaticResource CurrentTaskProperty}}" SelectedValue="{Binding taskId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" VerticalAlignment="Top" Width="120"/>-->

        <!-- DatePicker for תאריך תחילת העבודה על המשימה -->
        <DatePicker HorizontalAlignment="Left" Margin="-2,200,0,0" VerticalAlignment="Top" 
            SelectedDate="{Binding startDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Width="120"/>

        <!-- DatePicker for תאריך סיום אחרון אפשרי -->
        <DatePicker HorizontalAlignment="Left" Margin="0,332,0,0" VerticalAlignment="Top" 
            SelectedDate="{Binding deadLine, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Width="120"/>

        <!-- DatePicker for תאריך סיום בפועל -->
        <DatePicker HorizontalAlignment="Left" Margin="0,262,0,0" VerticalAlignment="Top" 
            SelectedDate="{Binding completeDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Width="120"/>

        <!-- DatePicker for תאריך מתוכנן לתחילת העבודה -->
        <DatePicker HorizontalAlignment="Left" Margin="0,144,0,0" VerticalAlignment="Top" 
            SelectedDate="{Binding scheduledStartDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Width="120"/>

        <!-- TextBox for תאריך יצירת הפרוייקט -->
        <DatePicker HorizontalAlignment="Left" Margin="0,92,0,0" VerticalAlignment="Top" 
            SelectedDate="{Binding createdAtDate, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Width="120"/>

        <Button Margin="72,381,633,10" Width="95" Click="btnAddUpdateTask_Click" Content="{Binding taskId,Mode=OneTime, Converter={StaticResource ConverIdToContentKey}}" />
    </Grid>
</Window>
