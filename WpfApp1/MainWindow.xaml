<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFF4D0C4">
        <Button Content="פתיחת רשימת מהנדסים" HorizontalAlignment="Left" Margin="454,160,0,0" VerticalAlignment="Top" Click="btnEngineers_Click" Width="160" Background="#FF00FFEC" RenderTransformOrigin="0.5,0.5" Height="80">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.059"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFE40D0D" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>
        <Button Content="פתיחת רשימת משימות" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonOpenListEngineers_Click" Background="#FF00FFEC" Height="80" Width="160" Margin="173,163,0,0">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFE40D0D" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>
        <Button Content="אתחול בסיס נתונים" HorizontalAlignment="Center" Margin="0,358,0,0" VerticalAlignment="Top" Click="btnInitializeDatabase_Click" Background="#FF00FFEC" Width="116" Height="45">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFE40D0D" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>

        </Button>

    </Grid>
</Window>
